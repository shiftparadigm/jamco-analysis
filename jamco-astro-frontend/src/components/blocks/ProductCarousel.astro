---
import { urlFor } from '../../lib/sanity'

interface Props {
  heading: string
  description?: string
  label?: string
  products: Array<any>
  showPagination?: boolean
}

const { heading, description, label, products, showPagination = true } = Astro.props
---

<section class="product-carousel">
  <div class="carousel-header">
    <div class="header-content">
      <h3>{heading}</h3>
      {description && <p class="description">{description}</p>}
    </div>
    {label && <span class="label">{label}</span>}
  </div>

  <div class="carousel-wrapper">
    <div class="carousel">
      <div class="carousel-track">
        {products.map((product) => (
          <div class="product-card">
            {product.images && product.images[0] && (
              <img
                src={urlFor(product.images[0]).width(400).height(500).fit('crop').auto('format').url()}
                alt={product.name}
                loading="lazy"
              />
            )}
            <div class="product-label">
              <h5>{product.name}</h5>
            </div>
          </div>
        ))}
      </div>
    </div>

    {showPagination && products.length > 1 && (
      <div class="carousel-controls">
        <button class="carousel-nav prev" aria-label="Previous">←</button>
        <span class="pagination">
          <span class="current">01</span> / <span class="total">{String(products.length).padStart(2, '0')}</span>
        </span>
        <button class="carousel-nav next" aria-label="Next">→</button>
      </div>
    )}
  </div>
</section>

<script>
  const carousel = document.querySelector('.product-carousel .carousel-track');
  const prevBtn = document.querySelector('.product-carousel .carousel-nav.prev');
  const nextBtn = document.querySelector('.product-carousel .carousel-nav.next');
  const currentSpan = document.querySelector('.product-carousel .current');
  const cards = document.querySelectorAll('.product-carousel .product-card');

  let currentIndex = 0;
  const cardWidth = 320 + 24; // card width + gap

  function updateIndicator() {
    if (currentSpan) {
      currentSpan.textContent = String(currentIndex + 1).padStart(2, '0');
    }
  }

  if (prevBtn && nextBtn && carousel) {
    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        carousel.scrollTo({ left: currentIndex * cardWidth, behavior: 'smooth' });
        updateIndicator();
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < cards.length - 1) {
        currentIndex++;
        carousel.scrollTo({ left: currentIndex * cardWidth, behavior: 'smooth' });
        updateIndicator();
      }
    });
  }
</script>

<style>
  .product-carousel {
    background: #3767AD;
    color: var(--color-light);
    padding: 80px 0 100px;
  }

  .carousel-header {
    max-width: 1440px;
    margin: 0 auto 60px;
    padding: 0 72px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .header-content {
    max-width: 600px;
  }

  h3 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 52px;
    font-weight: 300;
    line-height: 1.2;
    margin-bottom: 12px;
    color: white;
    letter-spacing: -0.02em;
  }

  .description {
    font-size: 18px;
    color: white;
    opacity: 0.9;
    margin: 0;
    line-height: 1.6;
  }

  .label {
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: white;
    white-space: nowrap;
  }

  .carousel-wrapper {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 72px;
  }

  .carousel {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    margin: 0 -72px;
    padding: 0 72px;
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .carousel-track {
    display: flex;
    gap: 24px;
  }

  .product-card {
    position: relative;
    flex: 0 0 360px;
    scroll-snap-align: start;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-8px);
  }

  .product-card img {
    width: 100%;
    height: 450px;
    object-fit: cover;
    display: block;
  }

  .product-label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: white;
    padding: 20px 24px;
  }

  .product-label h5 {
    color: #000;
    font-size: 18px;
    font-weight: 600;
    margin: 0;
    line-height: 1.3;
  }

  .carousel-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16px;
    margin-top: 48px;
  }

  .carousel-nav {
    width: 48px;
    height: 48px;
    border: 2px solid rgba(255, 255, 255, 0.4);
    background: transparent;
    color: white;
    border-radius: 50%;
    font-size: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-nav:hover {
    background: rgba(255, 255, 255, 0.15);
    border-color: white;
  }

  .pagination {
    font-size: 16px;
    font-weight: 500;
    color: white;
    min-width: 60px;
    text-align: center;
  }

  .pagination .current {
    font-weight: 700;
  }

  @media (max-width: 768px) {
    .carousel-header {
      flex-direction: column;
      gap: 1rem;
    }

    .product-card {
      flex: 0 0 260px;
    }
  }
</style>
