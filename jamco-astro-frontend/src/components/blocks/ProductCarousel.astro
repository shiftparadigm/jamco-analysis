---
import { urlFor } from '../../lib/sanity'

interface Props {
  heading: string
  description?: string
  label?: string
  products: Array<any>
  showPagination?: boolean
}

const { heading, description, label, products, showPagination = true } = Astro.props
---

<section class="product-carousel section">
  <div class="container">
    {label && <span class="label">{label}</span>}
    <h3>{heading}</h3>
    {description && <p class="description">{description}</p>}

    <div class="carousel">
      <div class="carousel-track">
        {products.map((product) => (
          <div class="product-card">
            {product.images && product.images[0] && (
              <img
                src={urlFor(product.images[0]).width(400).height(300).auto('format').url()}
                alt={product.name}
                loading="lazy"
              />
            )}
            <h5>{product.name}</h5>
            {product.shortDescription && <p>{product.shortDescription}</p>}
          </div>
        ))}
      </div>
    </div>

    {showPagination && (
      <div class="pagination">01 / {String(products.length).padStart(2, '0')}</div>
    )}
  </div>
</section>

<style>
  .product-carousel {
    text-align: center;
  }

  .label {
    display: block;
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-gray);
    margin-bottom: 0.5rem;
  }

  h3 {
    margin-bottom: 1rem;
  }

  .description {
    max-width: 800px;
    margin: 0 auto 3rem;
    color: var(--color-gray);
  }

  .carousel {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .carousel-track {
    display: flex;
    gap: var(--card-gap);
  }

  .product-card {
    flex: 0 0 400px;
    scroll-snap-align: start;
    background: var(--color-light);
    border-radius: var(--radius-md);
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform var(--transition-base);
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  .product-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
  }

  .product-card h5 {
    padding: 1rem 1.5rem 0.5rem;
    text-align: left;
  }

  .product-card p {
    padding: 0 1.5rem 1.5rem;
    font-size: var(--text-sm);
    color: var(--color-gray);
    text-align: left;
  }

  .pagination {
    margin-top: 2rem;
    font-size: var(--text-body);
    font-weight: var(--weight-medium);
    color: var(--color-gray);
  }

  @media (max-width: 768px) {
    .product-card {
      flex: 0 0 300px;
    }
  }
</style>
