---
import { urlFor } from '../../lib/sanity'

interface Props {
  heading: string
  description?: string
  label?: string
  products: Array<any>
  showPagination?: boolean
}

const { heading, description, label, products, showPagination = true } = Astro.props
---

<section class="product-carousel">
  <div class="carousel-header">
    <div class="header-content">
      <h3>{heading}</h3>
      {description && <p class="description">{description}</p>}
    </div>
    {label && <span class="label">{label}</span>}
  </div>

  <div class="carousel-wrapper">
    <div class="carousel">
      <div class="carousel-track">
        {products.map((product) => (
          <div class="product-card">
            {product.images && product.images[0] && (
              <img
                src={urlFor(product.images[0]).width(320).height(400).fit('crop').auto('format').url()}
                alt={product.name}
                loading="lazy"
              />
            )}
            <h5>{product.name}</h5>
          </div>
        ))}
      </div>
    </div>

    {showPagination && products.length > 1 && (
      <div class="carousel-controls">
        <button class="carousel-nav prev" aria-label="Previous">←</button>
        <span class="pagination">
          <span class="current">01</span> / <span class="total">{String(products.length).padStart(2, '0')}</span>
        </span>
        <button class="carousel-nav next" aria-label="Next">→</button>
      </div>
    )}
  </div>
</section>

<script>
  const carousel = document.querySelector('.product-carousel .carousel-track');
  const prevBtn = document.querySelector('.product-carousel .carousel-nav.prev');
  const nextBtn = document.querySelector('.product-carousel .carousel-nav.next');
  const currentSpan = document.querySelector('.product-carousel .current');
  const cards = document.querySelectorAll('.product-carousel .product-card');

  let currentIndex = 0;
  const cardWidth = 320 + 24; // card width + gap

  function updateIndicator() {
    if (currentSpan) {
      currentSpan.textContent = String(currentIndex + 1).padStart(2, '0');
    }
  }

  if (prevBtn && nextBtn && carousel) {
    prevBtn.addEventListener('click', () => {
      if (currentIndex > 0) {
        currentIndex--;
        carousel.scrollTo({ left: currentIndex * cardWidth, behavior: 'smooth' });
        updateIndicator();
      }
    });

    nextBtn.addEventListener('click', () => {
      if (currentIndex < cards.length - 1) {
        currentIndex++;
        carousel.scrollTo({ left: currentIndex * cardWidth, behavior: 'smooth' });
        updateIndicator();
      }
    });
  }
</script>

<style>
  .product-carousel {
    background: var(--color-primary);
    color: var(--color-light);
    padding: var(--section-gap) 0;
  }

  .carousel-header {
    max-width: var(--container-content);
    margin: 0 auto var(--spacing-xl);
    padding: 0 var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .header-content {
    max-width: 600px;
  }

  h3 {
    margin-bottom: 0.5rem;
    color: var(--color-light);
  }

  .description {
    color: var(--color-light);
    opacity: 0.9;
    margin: 0;
  }

  .label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: rgba(255, 255, 255, 0.15);
    padding: 6px 12px;
    border-radius: 4px;
    white-space: nowrap;
  }

  .carousel-wrapper {
    max-width: var(--container-content);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }

  .carousel {
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    margin: 0 -var(--spacing-md);
    padding: 0 var(--spacing-md);
  }

  .carousel::-webkit-scrollbar {
    display: none;
  }

  .carousel-track {
    display: flex;
    gap: var(--card-gap);
  }

  .product-card {
    flex: 0 0 320px;
    scroll-snap-align: start;
    background: var(--color-light);
    border-radius: var(--radius-md);
    overflow: hidden;
    transition: transform var(--transition-base);
  }

  .product-card:hover {
    transform: translateY(-4px);
  }

  .product-card img {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--radius-md) var(--radius-md) 0 0;
  }

  .product-card h5 {
    padding: 1rem 1.25rem;
    color: var(--color-dark);
    font-size: 16px;
  }

  .carousel-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-top: var(--spacing-lg);
  }

  .carousel-nav {
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    background: transparent;
    color: var(--color-light);
    border-radius: 50%;
    font-size: 18px;
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .carousel-nav:hover {
    background: var(--color-light);
    color: var(--color-primary);
    border-color: var(--color-light);
  }

  .pagination {
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
  }

  .pagination .current {
    font-weight: var(--weight-bold);
  }

  @media (max-width: 768px) {
    .carousel-header {
      flex-direction: column;
      gap: 1rem;
    }

    .product-card {
      flex: 0 0 260px;
    }
  }
</style>
