---
interface Props {
  heading: string
  description?: string
  showDivider?: boolean
}

const { heading, description, showDivider = true } = Astro.props
---

<section class="section-intro">
  <div class="container">
    <div class="intro-grid">
      <h4>{heading}</h4>
      {description && <p>{description}</p>}
    </div>
    {showDivider && <hr class="divider" />}
  </div>
</section>

<style>
  .section-intro {
    padding: var(--spacing-xl) 0 var(--spacing-md);
  }

  .intro-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    align-items: end;
  }

  h4 {
    margin: 0;
    color: var(--color-primary);
    font-weight: 300;
  }

  p {
    margin: 0;
    color: var(--color-primary);
    font-size: var(--text-body);
    line-height: 1.6;
  }

  .divider {
    border: none;
    border-top: 1px solid rgba(11, 89, 169, 0.2);
    margin-top: var(--spacing-lg);
    width: 100%;
  }

  @media (max-width: 768px) {
    .intro-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }
</style>
