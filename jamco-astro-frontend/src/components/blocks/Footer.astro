---
interface Props {
  logo?: any
  companyNames?: string[]
  aogPhone?: string
  officePhone?: string
  copyright?: string
}

const {
  logo,
  companyNames = ['Jamco America, Inc', 'Jamco Corporation'],
  aogPhone = '425-232-0770',
  officePhone = '425-347-4735',
  copyright = `Â© ${new Date().getFullYear()} Jamco America. All rights reserved.`
} = Astro.props
---

<footer class="site-footer">
  <div class="footer-main">
    <div class="footer-container">
      <div class="footer-left">
        <div class="footer-logo">
          {logo ? (
            <img src={logo} alt="Jamco" />
          ) : (
            <span class="logo-text">Jamco</span>
          )}
        </div>
        <div class="company-names">
          {companyNames.map((name) => (
            <p>{name}</p>
          ))}
        </div>
      </div>

      <div class="footer-right">
        <div class="contact-info">
          <p><span class="label">AOG:</span> <a href={`tel:${aogPhone.replace(/-/g, '')}`}>{aogPhone}</a></p>
          <p><span class="label">Office:</span> <a href={`tel:${officePhone.replace(/-/g, '')}`}>{officePhone}</a></p>
        </div>
        <div class="social-links">
          <a href="#" aria-label="Twitter/X" class="social-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
          <a href="#" aria-label="LinkedIn" class="social-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-copyright">
    <div class="footer-container">
      <p>{copyright}</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    margin-top: auto;
  }

  .footer-main {
    background: var(--color-dark-bg);
    color: var(--color-light);
    padding: var(--spacing-xl) 0;
  }

  .footer-container {
    max-width: var(--container-content);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .footer-logo img {
    height: 32px;
    width: auto;
  }

  .logo-text {
    font-family: var(--font-heading);
    font-size: 24px;
    font-weight: var(--weight-bold);
    color: var(--color-light);
  }

  .company-names p {
    font-size: var(--text-sm);
    margin: 0;
    opacity: 0.8;
    line-height: 1.6;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--spacing-md);
  }

  .contact-info {
    text-align: right;
  }

  .contact-info p {
    font-size: var(--text-sm);
    margin: 0 0 0.25rem;
  }

  .contact-info .label {
    opacity: 0.7;
  }

  .contact-info a {
    color: var(--color-light);
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .contact-info a:hover {
    opacity: 0.8;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
  }

  .social-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-light);
    opacity: 0.8;
    transition: opacity var(--transition-base);
  }

  .social-icon:hover {
    opacity: 1;
  }

  .footer-copyright {
    background: rgba(0, 0, 0, 0.3);
    padding: var(--spacing-sm) 0;
  }

  .footer-copyright .footer-container {
    display: block;
  }

  .footer-copyright p {
    font-size: var(--text-xs);
    margin: 0;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      gap: var(--spacing-lg);
    }

    .footer-right {
      align-items: flex-start;
    }

    .contact-info {
      text-align: left;
    }
  }
</style>
