---
import { urlFor } from '../../lib/sanity'

interface Props {
  heading: string
  subheading?: string
  productImage?: any
  brandName?: string
  brandDescription?: string
  showPagination?: boolean
}

const {
  heading,
  subheading,
  productImage,
  brandName = 'Venture',
  brandDescription,
  showPagination = true
} = Astro.props

const imageUrl = productImage ? urlFor(productImage).width(800).auto('format').url() : null
---

<section class="product-showcase">
  <div class="showcase-container">
    <div class="showcase-content">
      <h2>{heading}</h2>
      {subheading && <p class="subheading">{subheading}</p>}
    </div>

    <div class="showcase-product">
      <div class="product-card">
        {imageUrl && <img src={imageUrl} alt={heading} />}
        {showPagination && (
          <div class="pagination">
            <button class="nav-btn prev" aria-label="Previous">←</button>
            <span class="indicator"><span class="current">01</span> / 02</span>
            <button class="nav-btn next" aria-label="Next">→</button>
          </div>
        )}
      </div>

      <div class="brand-info">
        <span class="brand-name">{brandName}</span>
        {brandDescription && <p class="brand-description">{brandDescription}</p>}
      </div>
    </div>
  </div>
</section>

<style>
  .product-showcase {
    background: var(--color-primary);
    color: var(--color-light);
    padding: var(--section-gap) 0;
  }

  .showcase-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--spacing-xl);
    align-items: start;
  }

  .showcase-content {
    padding-top: var(--spacing-xl);
  }

  h2 {
    font-size: clamp(48px, 6vw, 80px);
    font-weight: var(--weight-light);
    line-height: 1;
    margin-bottom: var(--spacing-md);
    letter-spacing: -0.03em;
  }

  .subheading {
    font-size: var(--text-body);
    opacity: 0.9;
    max-width: 300px;
  }

  .showcase-product {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .product-card {
    background: var(--color-light);
    border-radius: var(--radius-md);
    overflow: hidden;
    position: relative;
  }

  .product-card img {
    width: 100%;
    height: auto;
    display: block;
  }

  .pagination {
    position: absolute;
    bottom: var(--spacing-md);
    right: var(--spacing-md);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-btn {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid var(--color-primary);
    background: transparent;
    color: var(--color-primary);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    transition: all var(--transition-base);
  }

  .nav-btn:hover {
    background: var(--color-primary);
    color: var(--color-light);
  }

  .indicator {
    font-size: var(--text-sm);
    color: var(--color-primary);
  }

  .indicator .current {
    font-weight: var(--weight-bold);
  }

  .brand-info {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-lg);
  }

  .brand-name {
    font-family: 'Times New Roman', serif;
    font-style: italic;
    font-size: 28px;
    color: var(--color-light);
    flex-shrink: 0;
  }

  .brand-description {
    font-size: var(--text-sm);
    line-height: 1.6;
    opacity: 0.9;
    margin: 0;
  }

  @media (max-width: 1024px) {
    .showcase-container {
      grid-template-columns: 1fr;
    }

    .showcase-content {
      padding-top: 0;
    }

    h2 {
      font-size: 48px;
    }
  }

  @media (max-width: 768px) {
    .product-showcase {
      padding: var(--spacing-lg) 0;
    }

    .showcase-container {
      gap: var(--spacing-md);
      padding: 0 1rem;
    }

    h2 {
      font-size: 36px;
      margin-bottom: var(--spacing-sm);
    }

    .subheading {
      font-size: 14px;
    }

    .product-card {
      border-radius: var(--radius-sm);
    }

    .pagination {
      bottom: var(--spacing-sm);
      right: var(--spacing-sm);
    }

    .nav-btn {
      width: 28px;
      height: 28px;
      font-size: 12px;
    }

    .brand-info {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .brand-name {
      font-size: 22px;
    }

    .brand-description {
      font-size: 13px;
    }
  }
</style>
