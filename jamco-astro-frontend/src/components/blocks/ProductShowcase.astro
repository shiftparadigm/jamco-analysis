---
import { urlFor } from '../../lib/sanity'

interface Props {
  heading: string
  subheading?: string
  productImage?: any
  brandName?: string
  brandDescription?: string
  showPagination?: boolean
  backgroundColor?: 'primary' | 'light-blue' | 'dark-blue' | 'white'
}

const {
  heading,
  subheading,
  productImage,
  brandName = 'Venture',
  brandDescription,
  showPagination = true,
  backgroundColor = 'light-blue'
} = Astro.props

const imageUrl = productImage ? urlFor(productImage).width(800).auto('format').url() : null
---

<section class={`product-showcase bg-${backgroundColor}`}>
  <div class="showcase-container">
    <div class="showcase-content">
      <h2>{heading}</h2>
      {subheading && <p class="subheading">{subheading}</p>}
    </div>

    <div class="showcase-product">
      <div class="product-card">
        {imageUrl && <img src={imageUrl} alt={heading} />}
        {showPagination && (
          <div class="pagination">
            <button class="nav-btn prev" aria-label="Previous">←</button>
            <span class="indicator"><span class="current">01</span> / 02</span>
            <button class="nav-btn next" aria-label="Next">→</button>
          </div>
        )}
      </div>

      <div class="brand-info">
        <span class="brand-name">{brandName}</span>
        {brandDescription && <p class="brand-description">{brandDescription}</p>}
      </div>
    </div>
  </div>
</section>

<style>
  .product-showcase {
    color: var(--color-light);
    padding: 80px 0 100px;
  }

  .product-showcase.bg-primary {
    background: var(--color-primary);
  }

  .product-showcase.bg-light-blue {
    background: #0B59A9;
  }

  .product-showcase.bg-dark-blue {
    background: var(--color-dark-bg);
  }

  .product-showcase.bg-white {
    background: var(--color-light);
    color: var(--color-dark);
  }

  .product-showcase.bg-white h2,
  .product-showcase.bg-white .brand-name {
    color: var(--color-primary);
  }

  .product-showcase.bg-white .subheading,
  .product-showcase.bg-white .brand-description {
    color: var(--color-dark);
    opacity: 0.8;
  }

  .showcase-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 72px;
    display: grid;
    grid-template-columns: 380px 1fr;
    gap: 100px;
    align-items: center;
  }

  .showcase-content {
    padding-top: 0;
  }

  h2 {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 96px;
    font-weight: 300;
    line-height: 0.9;
    margin-bottom: 24px;
    letter-spacing: -0.06em;
    color: white;
  }

  .subheading {
    font-size: 16px;
    line-height: 1.6;
    letter-spacing: -0.03em;
    color: rgba(255, 255, 255, 0.95);
    max-width: 340px;
  }

  .showcase-product {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .product-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    position: relative;
    padding: 40px;
  }

  .product-card img {
    width: 100%;
    height: auto;
    display: block;
  }

  .pagination {
    position: absolute;
    bottom: 32px;
    right: 32px;
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .nav-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    border: 1px solid #0B59A9;
    background: transparent;
    color: #0B59A9;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    transition: all 0.2s ease;
    font-weight: 300;
  }

  .nav-btn:hover {
    background: #0B59A9;
    color: white;
  }

  .indicator {
    font-size: 14px;
    color: #0B59A9;
    font-weight: 500;
  }

  .indicator .current {
    font-weight: 700;
  }

  .brand-info {
    display: flex;
    align-items: flex-start;
    gap: 32px;
  }

  .brand-name {
    font-family: 'Times New Roman', serif;
    font-style: italic;
    font-size: 36px;
    color: white;
    flex-shrink: 0;
    line-height: 1;
  }

  .brand-description {
    font-size: 14px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    padding-top: 4px;
  }

  @media (max-width: 1024px) {
    .showcase-container {
      grid-template-columns: 1fr;
    }

    .showcase-content {
      padding-top: 0;
    }

    h2 {
      font-size: 48px;
    }
  }

  @media (max-width: 768px) {
    .product-showcase {
      padding: var(--spacing-lg) 0;
    }

    .showcase-container {
      gap: var(--spacing-md);
      padding: 0 1rem;
    }

    h2 {
      font-size: 36px;
      margin-bottom: var(--spacing-sm);
    }

    .subheading {
      font-size: 14px;
    }

    .product-card {
      border-radius: var(--radius-sm);
    }

    .pagination {
      bottom: var(--spacing-sm);
      right: var(--spacing-sm);
    }

    .nav-btn {
      width: 28px;
      height: 28px;
      font-size: 12px;
    }

    .brand-info {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .brand-name {
      font-size: 22px;
    }

    .brand-description {
      font-size: 13px;
    }
  }
</style>
