---
interface Props {
  breadcrumb?: Array<{ label: string; href?: string }>
}

const { breadcrumb = [] } = Astro.props
---

<header class="site-header">
  <!-- Top Navigation Bar -->
  <div class="top-nav">
    <div class="nav-container">
      <a href="/" class="logo">
        <svg width="100" height="28" viewBox="0 0 100 28" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12.5 4C8.5 4 6 6.5 6 10.5C6 14.5 8.5 17 12.5 17H14V23H8V28H20V17H12.5C11 17 10 16 10 14.5V10.5C10 9 11 8 12.5 8H20V4H12.5Z" fill="currentColor"/>
          <text x="24" y="20" font-family="Arial" font-size="18" font-weight="600" fill="currentColor">Jamco</text>
        </svg>
      </a>

      <nav class="main-nav">
        <a href="/locations" class="nav-item">LOCATIONS</a>
        <a href="/news" class="nav-item">NEWS</a>
        <button class="nav-item dropdown">
          PRODUCTS
          <svg width="10" height="6" viewBox="0 0 10 6" fill="none">
            <path d="M1 1L5 5L9 1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </nav>
    </div>
  </div>

  <!-- Breadcrumb Bar -->
  {breadcrumb.length > 0 && (
    <div class="breadcrumb-bar">
      <div class="breadcrumb-container">
        <nav class="breadcrumb" aria-label="Breadcrumb">
          {breadcrumb.map((item, index) => (
            <span class="breadcrumb-item">
              {item.href ? (
                <a href={item.href}>{item.label}</a>
              ) : (
                <span>{item.label}</span>
              )}
              {index < breadcrumb.length - 1 && <span class="separator">â€º</span>}
            </span>
          ))}
        </nav>
        <a href="/contact" class="btn-contact">Contact Us</a>
      </div>
    </div>
  )}
</header>

<style>
  .site-header {
    position: relative;
    z-index: 100;
  }

  /* Top Navigation Bar - White */
  .top-nav {
    background: white;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .nav-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 16px 72px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    color: var(--color-primary);
    text-decoration: none;
  }

  .logo svg {
    height: 28px;
    width: auto;
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 6px;
    background: none;
    border: none;
    font-size: 12px;
    font-weight: 600;
    color: var(--color-primary);
    cursor: pointer;
    padding: 8px 16px;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .nav-item:hover {
    opacity: 0.7;
  }

  .nav-item.dropdown svg {
    margin-top: 1px;
  }

  /* Breadcrumb Bar - Light Blue */
  .breadcrumb-bar {
    background: #EDF4FA;
  }

  .breadcrumb-container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 12px 72px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .breadcrumb-item a {
    color: var(--color-primary);
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .breadcrumb-item a:hover {
    opacity: 0.7;
  }

  .breadcrumb-item span:not(.separator) {
    color: var(--color-primary);
  }

  .separator {
    color: var(--color-primary);
    opacity: 0.5;
  }

  .btn-contact {
    display: inline-block;
    padding: 10px 24px;
    font-size: 14px;
    font-weight: 600;
    text-decoration: none;
    background: var(--color-primary);
    color: white;
    border-radius: 999px;
    transition: background 0.2s ease;
  }

  .btn-contact:hover {
    background: var(--color-primary-light);
  }

  @media (max-width: 768px) {
    .nav-container,
    .breadcrumb-container {
      padding: 12px 24px;
    }

    .main-nav {
      display: none;
    }

    .breadcrumb {
      font-size: 12px;
    }
  }
</style>
