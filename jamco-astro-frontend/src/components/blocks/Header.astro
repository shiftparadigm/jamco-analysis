---
interface Props {
  breadcrumb?: Array<{ label: string; href?: string }>
}

const { breadcrumb = [] } = Astro.props
---

<header class="site-header">
  <div class="header-container">
    <div class="header-left">
      <a href="/" class="logo">
        <svg width="100" height="28" viewBox="0 0 100 28" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12.5 4C8.5 4 6 6.5 6 10.5C6 14.5 8.5 17 12.5 17H14V23H8V28H20V17H12.5C11 17 10 16 10 14.5V10.5C10 9 11 8 12.5 8H20V4H12.5Z" fill="currentColor"/>
          <text x="24" y="20" font-family="Arial" font-size="18" font-weight="600" fill="currentColor">Jamco</text>
        </svg>
      </a>

      {breadcrumb.length > 0 && (
        <nav class="breadcrumb" aria-label="Breadcrumb">
          {breadcrumb.map((item, index) => (
            <span class="breadcrumb-item">
              {item.href ? (
                <a href={item.href}>{item.label}</a>
              ) : (
                <span>{item.label}</span>
              )}
              {index < breadcrumb.length - 1 && <span class="separator">â€º</span>}
            </span>
          ))}
        </nav>
      )}
    </div>

    <div class="header-right">
      <nav class="main-nav">
        <button class="nav-item dropdown">
          Products
          <svg width="12" height="12" viewBox="0 0 12 12" fill="none">
            <path d="M3 5L6 8L9 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
          </svg>
        </button>
      </nav>
      <a href="/contact" class="btn-contact">Contact Us</a>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-light);
    border-bottom: 1px solid var(--color-border);
  }

  .header-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0.75rem var(--spacing-md);
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
  }

  .logo {
    display: flex;
    align-items: center;
    color: var(--color-primary);
    text-decoration: none;
  }

  .logo svg {
    height: 28px;
    width: auto;
  }

  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: var(--text-sm);
  }

  .breadcrumb-item a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .breadcrumb-item a:hover {
    text-decoration: underline;
  }

  .breadcrumb-item span:not(.separator) {
    color: var(--color-primary);
    font-weight: var(--weight-medium);
  }

  .separator {
    color: var(--color-gray);
  }

  .header-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
  }

  .main-nav {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 4px;
    background: none;
    border: none;
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    color: var(--color-dark);
    cursor: pointer;
    padding: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-item:hover {
    color: var(--color-primary);
  }

  .btn-contact {
    display: inline-block;
    padding: 8px 20px;
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    text-decoration: none;
    background: var(--color-primary);
    color: var(--color-light);
    border-radius: 999px;
    transition: background var(--transition-base);
  }

  .btn-contact:hover {
    background: var(--color-primary-light);
    color: var(--color-light);
  }

  @media (max-width: 768px) {
    .breadcrumb {
      display: none;
    }

    .main-nav {
      display: none;
    }
  }
</style>
