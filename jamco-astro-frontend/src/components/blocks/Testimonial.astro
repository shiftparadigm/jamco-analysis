---
import { urlFor } from '../../lib/sanity'

interface Props {
  testimonials?: any[]
  backgroundImage?: any
  quoteSize?: string
  layout?: string
  showDivider?: boolean
  // Legacy support for flat structure
  quote?: string
  authorName?: string
  authorTitle?: string
  authorImage?: any
}

const {
  testimonials = [],
  backgroundImage,
  quoteSize = 'large',
  layout = 'left-aligned',
  showDivider = false,
  // Legacy
  quote,
  authorName,
  authorTitle,
  authorImage
} = Astro.props

// Use first testimonial from array, or fall back to flat props
const testimonial = testimonials.length > 0 ? testimonials[0] : { quote, author: authorName, title: authorTitle, image: authorImage }

const bgImageUrl = backgroundImage ? urlFor(backgroundImage).width(1440).auto('format').url() : null
const avatarUrl = testimonial.image ? urlFor(testimonial.image).width(120).height(120).auto('format').url() : null

// Default avatar SVG as data URI
const defaultAvatar = "data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='50' cy='50' r='50' fill='%23e0e7ef'/%3E%3Ccircle cx='50' cy='38' r='18' fill='%23a0aec0'/%3E%3Cellipse cx='50' cy='80' rx='28' ry='22' fill='%23a0aec0'/%3E%3C/svg%3E"
---

<section class={`testimonial testimonial-${quoteSize} testimonial-${layout}`}>
  {bgImageUrl && <div class="bg-image" style={`background-image: url(${bgImageUrl})`}></div>}
  <div class="testimonial-overlay"></div>

  <div class="testimonial-container">
    <blockquote>
      <p class="quote">"{testimonial.quote}"</p>
    </blockquote>

    <div class="author">
      <img src={avatarUrl || defaultAvatar} alt={testimonial.author} class="author-image" />
      <div class="author-info">
        <p class="author-name">{testimonial.author}</p>
        <p class="author-title">{testimonial.title}{testimonial.company ? `, ${testimonial.company}` : ''}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial {
    position: relative;
    background: #3767AD;
    color: var(--color-light);
    padding: 100px 0 120px;
    overflow: hidden;
  }

  .bg-image {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.2;
  }

  .testimonial-overlay {
    position: absolute;
    inset: 0;
    background: rgba(55, 103, 173, 0.85);
  }

  .testimonial-container {
    position: relative;
    z-index: 1;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 72px;
  }

  .testimonial-left-aligned .testimonial-container {
    max-width: 1440px;
  }

  blockquote {
    margin: 0 0 2rem;
    max-width: 1100px;
  }

  .quote {
    font-family: 'Space Grotesk', sans-serif;
    font-size: 48px;
    line-height: 140%;
    font-weight: 300;
    margin: 0;
    letter-spacing: -2.88px;
    color: #FFF;
  }

  .testimonial-medium .quote {
    font-size: 36px;
  }

  .testimonial-small .quote {
    font-size: 28px;
  }

  .author {
    display: flex;
    align-items: center;
    gap: 1.25rem;
  }

  .author-image {
    width: 64px;
    height: 64px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid rgba(255, 255, 255, 0.3);
  }

  .author-info {
    text-align: left;
  }

  .author-name {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 0.25rem;
  }

  .author-title {
    font-size: 16px;
    opacity: 0.85;
    margin: 0;
  }

  @media (max-width: 768px) {
    .testimonial {
      padding: var(--spacing-xl) 0;
    }

    .testimonial-container {
      padding: 0 1rem;
    }

    .quote {
      font-size: 24px;
      line-height: 1.35;
    }

    .testimonial-large .quote {
      font-size: 22px;
    }

    .testimonial-medium .quote {
      font-size: 20px;
    }

    .quote-box {
      padding: 1rem;
    }

    blockquote {
      margin-bottom: 1.5rem;
    }

    .author {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .author-info {
      text-align: center;
    }

    .author-name {
      font-size: 14px;
    }

    .author-title {
      font-size: 12px;
    }
  }
</style>
