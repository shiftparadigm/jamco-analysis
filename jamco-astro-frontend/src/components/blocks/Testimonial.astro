---
import { urlFor } from '../../lib/sanity'

interface Props {
  quote: string
  authorName: string
  authorTitle: string
  authorImage?: any
  backgroundImage?: any
  quoteSize?: string
  layout?: string
  showDivider?: boolean
}

const {
  quote,
  authorName,
  authorTitle,
  authorImage,
  backgroundImage,
  quoteSize = 'large',
  layout = 'left-aligned',
  showDivider = true
} = Astro.props

const bgImageUrl = backgroundImage ? urlFor(backgroundImage).width(1440).auto('format').url() : null
const avatarUrl = authorImage ? (typeof authorImage === 'string' ? authorImage : urlFor(authorImage).width(120).height(120).auto('format').url()) : null
---

<section class={`testimonial testimonial-${quoteSize} testimonial-${layout}`}>
  {bgImageUrl && <div class="bg-image" style={`background-image: url(${bgImageUrl})`}></div>}
  <div class="testimonial-overlay"></div>

  <div class="testimonial-container">
    <blockquote>
      <div class="quote-box">
        {showDivider && <hr class="divider" />}
        <p class="quote">"{quote}"</p>
      </div>
    </blockquote>

    <div class="author">
      {avatarUrl && (
        <img src={avatarUrl} alt={authorName} class="author-image" />
      )}
      <div class="author-info">
        <p class="author-name">{authorName}</p>
        <p class="author-title">{authorTitle}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial {
    position: relative;
    background: var(--color-dark-bg);
    color: var(--color-light);
    padding: var(--section-gap) 0;
    overflow: hidden;
  }

  .bg-image {
    position: absolute;
    inset: 0;
    background-size: cover;
    background-position: center;
    opacity: 0.3;
  }

  .testimonial-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--color-dark-bg) 0%, rgba(3, 35, 67, 0.8) 100%);
  }

  .testimonial-container {
    position: relative;
    z-index: 1;
    max-width: var(--container-narrow);
    margin: 0 auto;
    padding: 0 var(--spacing-xl);
  }

  .testimonial-centered {
    text-align: center;
  }

  .testimonial-left-aligned .testimonial-container {
    max-width: var(--container-content);
  }

  blockquote {
    margin: 0 0 2.5rem;
  }

  .quote-box {
    border: 1px dashed rgba(255, 255, 255, 0.3);
    padding: var(--spacing-xl);
    border-radius: 4px;
  }

  .divider {
    width: 60px;
    height: 2px;
    background: var(--color-light);
    opacity: 0.4;
    border: none;
    margin: 0 0 var(--spacing-lg);
  }

  .testimonial-centered .divider {
    margin: 0 auto var(--spacing-lg);
  }

  .quote {
    font-family: var(--font-heading);
    font-size: 48px;
    line-height: 1.25;
    font-weight: var(--weight-light);
    margin: 0;
    letter-spacing: -0.02em;
  }

  .testimonial-medium .quote {
    font-size: 36px;
  }

  .testimonial-small .quote {
    font-size: 28px;
  }

  .author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .testimonial-centered .author {
    justify-content: center;
  }

  .author-image {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .author-info {
    text-align: left;
  }

  .author-name {
    font-size: 16px;
    font-weight: var(--weight-semibold);
    margin: 0 0 0.25rem;
  }

  .author-title {
    font-size: 14px;
    opacity: 0.75;
    margin: 0;
  }

  @media (max-width: 768px) {
    .testimonial {
      padding: var(--spacing-xl) 0;
    }

    .testimonial-container {
      padding: 0 1rem;
    }

    .quote {
      font-size: 24px;
      line-height: 1.35;
    }

    .testimonial-large .quote {
      font-size: 22px;
    }

    .testimonial-medium .quote {
      font-size: 20px;
    }

    .quote-box {
      padding: 1rem;
    }

    blockquote {
      margin-bottom: 1.5rem;
    }

    .author {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }

    .author-info {
      text-align: center;
    }

    .author-name {
      font-size: 14px;
    }

    .author-title {
      font-size: 12px;
    }
  }
</style>
